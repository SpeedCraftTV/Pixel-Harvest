{
  "name": "pixel-harvest-electron",
  "version": "0.1.0",
  "description": "Electron wrapper for Pixel-Harvest frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.speedcraft.pixelharvest",
    "productName": "PixelHarvest",
    "files": [ "**/*" ],
    "directories": { "buildResources": "assets" },
    "win": { "target": "nsis" }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  }
}
